'' modo del enrolado, si directo o por verificacion de nomina previo
Private enroladodirecto As Boolean
'' asigna y define el modo de enrolado, si directo true o verificado con false
Public Sub setModoDirecto(modo As String)
    If Comp(modo, "directo", gb.IgnoreCase) = 0 Then
    enroladodirecto = True
    Else
    enroladodirecto = False
    Endif
End
'' responde si el modo actual es directo o no
Public Sub itsModoDirecto() As Boolean
    Return enroladodirecto
End


'' modo de verificacion, dedo, cara o dedo y cara, cara es automatico si dedo no esta (scaner falta)
Private modoambos As Boolean
'' modo de verificacion, dedo, cara o dedo y cara, cara es automatico si dedo no esta (scaner falta)
Private modoverificado As String
'' asigna y define el modo de verificado, dedo, cara o dedo y cara, cara es automatico si dedo no esta (scaner falta)
Public Sub setModoVerificado(modo As String)
    If Comp(modo, "dedo", gb.IgnoreCase) = 0 Then
    modoambos = True
    modoverificado = modo
    Endif
    If Comp(modo, "cara", gb.IgnoreCase) = 0 Then
    modoambos = False
    modoverificado = modo
    Endif
    If Comp(modo, "dedoycara", gb.IgnoreCase) = 0 Then
    modoambos = True
    modoverificado = "ambos"
    Endif
End
'' dice si la verificacion es dedo o ambos, devolvera Ture para ambos o cara si dedo falta (escaner falla)
Public Sub itsModoAmbos() As Boolean
    Return modoambos
End
'' dice que modo de verificacion es: devolvera cara o ambos si dedo falta (escaner falla)
Public Sub getModoVerificado() As String
    Return modoverificado
End


